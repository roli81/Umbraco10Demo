@using Umbraco.Cms.Web.Common.PublishedModels;

@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Sss.Umb9.Mutobo.PageModels.BasePage>
@inject Sss.Umb9.Mutobo.Interfaces.IThemeService themeservice;
@{
	var theme = themeservice.GetTheme(Model.Content);
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="description" content="@Model.MetaDescription">
	<meta name="keywords" content="@Model.MetaKeywords">
	<meta name="author" content="Schenk-Smart-Solutions">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@Model.Content.Name</title>
	<!-- Bootstrap CSS -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

	<link rel="stylesheet" href="~/css/styles.css" />

</head>
<body>

	
	@if(theme != null) {
		@await Html.PartialAsync("~/Views/Partials/Theme.cshtml", theme);
	}
	<header>
		@await Html.PartialAsync("~/Views/Partials/Layout/Header.cshtml", Model.HeaderConfiguration)
	</header>
	<main>
		@RenderBody()
	</main>
	<footer>
		@await Html.PartialAsync("~/Views/Partials/Layout/Footer.cshtml", Model.FooterConfiguration)
	</footer>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>